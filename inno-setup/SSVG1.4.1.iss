Name: "{group}\{#MyAppName} のアンインストール"; Filename: "{uninstallexe}"; Languages: japanese
Name: "{userdesktop}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"; Tasks: desktopicon
